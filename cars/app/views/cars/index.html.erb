<h1>Cars</h1>
<a href='/cars/new'>New Car</a>

<% @cars.each do |car| %>
<p></p>
    <div>
        <%= car.name %> |
        <%= car.color %> |
        <%= car.year %> |
        <%= car.brand.name %>
        <a href='/cars/edit?id=<%= car.id %>'>Edit</a>
        <a href='/cars/delete?id=<%= car.id %>'>Delete</a>
    </div>
    <p></p>
<% end %>